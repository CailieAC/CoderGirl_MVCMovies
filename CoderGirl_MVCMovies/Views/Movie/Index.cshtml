@model IEnumerable<CoderGirl_MVCMovies.ViewModels.Movies.MovieListItemViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" id="add-new-movie">Add New Movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Director
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>Average Rating</th>
            <th>Number of Ratings</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr id="@item.Id)">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>@Html.DisplayFor(modelItem => item.AverageRating)</td>
            <td>@Html.DisplayFor(modelItem => item.NumberOfRatings)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })  |
                @* make below link go to movierating controller*@
                @Html.ActionLink("Rate", "Create", "MovieRating", new { movieId = item.Id }, null)
                @*<a asp-controller="MovieRating" asp-action="Create" asp-route-movieId="@Model.Id">Rate</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
